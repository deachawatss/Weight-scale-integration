<Page x:Class="PK.BridgeService.ConfigWizard.Pages.ScaleTestingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="ScaleTesting"
      d:DesignHeight="450"
      d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Style="{StaticResource TitleText}" Text="Scale Testing &amp; Verification"/>
            <TextBlock Text="Test your scale connections to ensure they're working properly before installation."
                      FontSize="12"
                      Foreground="#666"
                      Margin="0,5,0,0"/>

            <!-- Polling Interval Setting -->
            <Border Background="#FFF8DC"
                    BorderBrush="#DAA520"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="15"
                    Margin="0,15,0,0">
                <StackPanel>
                    <TextBlock Text="âš™ï¸ Update Speed (Polling Interval)"
                              FontSize="14"
                              FontWeight="SemiBold"
                              Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="PollingIntervalInput"
                                Width="120"
                                Height="32"
                                VerticalContentAlignment="Center"
                                FontSize="14"
                                Padding="8,0"
                                TextChanged="PollingIntervalInput_TextChanged"
                                Margin="0,0,10,0"/>
                        <TextBlock Text="ms (100 = very fast, 400 = normal)"
                                  VerticalAlignment="Center"
                                  FontSize="12"
                                  Foreground="#666"/>
                    </StackPanel>
                    <TextBlock Text="Lower values = faster updates but more CPU usage. Recommended: 100ms"
                              FontSize="11"
                              Foreground="#666"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Testing Cards -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SMALL Scale Test Card -->
            <Border Grid.Column="0"
                    Background="White"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="SMALL Scale"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="#8B4513"
                              Margin="0,0,0,15"/>

                    <!-- Connection Status -->
                    <Border Background="#F5F5F5"
                           BorderBrush="#DDD"
                           BorderThickness="1"
                           CornerRadius="4"
                           Padding="15"
                           Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Connection Status"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      Foreground="#666"
                                      Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="SmallScaleIndicator"
                                        Width="12"
                                        Height="12"
                                        Fill="#999"
                                        Margin="0,0,8,0"/>
                                <TextBlock x:Name="SmallScaleStatus"
                                          Text="Not Tested"
                                          FontSize="14"
                                          FontWeight="SemiBold"/>
                            </StackPanel>
                            <TextBlock x:Name="SmallScalePort"
                                      Text="Port: Not configured"
                                      FontSize="12"
                                      Foreground="#666"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Weight Display -->
                    <Border Background="#F0F8FF"
                           BorderBrush="#2196F3"
                           BorderThickness="2"
                           CornerRadius="4"
                           Padding="20"
                           Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Current Weight"
                                      FontSize="12"
                                      Foreground="#666"
                                      TextAlignment="Center"
                                      Margin="0,0,0,5"/>
                            <TextBlock x:Name="SmallScaleWeight"
                                      Text="0.000"
                                      FontSize="36"
                                      FontWeight="Bold"
                                      Foreground="#2196F3"
                                      TextAlignment="Center"/>
                            <TextBlock Text="KG"
                                      FontSize="14"
                                      Foreground="#666"
                                      TextAlignment="Center"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Test Button -->
                    <Button x:Name="TestSmallScaleButton"
                           Content="ðŸ” Test Scale"
                           Height="40"
                           Background="#2196F3"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="SemiBold"
                           BorderThickness="0"
                           Click="TestSmallScaleButton_Click"/>

                    <!-- Instructions -->
                    <TextBlock Text="Place a known weight on the scale and click 'Test Scale' to verify the reading."
                              FontSize="11"
                              Foreground="#666"
                              TextWrapping="Wrap"
                              Margin="0,10,0,0"
                              TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- BIG Scale Test Card -->
            <Border Grid.Column="2"
                    Background="White"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="BIG Scale"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="#8B4513"
                              Margin="0,0,0,15"/>

                    <!-- Connection Status -->
                    <Border Background="#F5F5F5"
                           BorderBrush="#DDD"
                           BorderThickness="1"
                           CornerRadius="4"
                           Padding="15"
                           Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Connection Status"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      Foreground="#666"
                                      Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="BigScaleIndicator"
                                        Width="12"
                                        Height="12"
                                        Fill="#999"
                                        Margin="0,0,8,0"/>
                                <TextBlock x:Name="BigScaleStatus"
                                          Text="Not Tested"
                                          FontSize="14"
                                          FontWeight="SemiBold"/>
                            </StackPanel>
                            <TextBlock x:Name="BigScalePort"
                                      Text="Port: Not configured"
                                      FontSize="12"
                                      Foreground="#666"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Weight Display -->
                    <Border Background="#F0F8FF"
                           BorderBrush="#2196F3"
                           BorderThickness="2"
                           CornerRadius="4"
                           Padding="20"
                           Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Current Weight"
                                      FontSize="12"
                                      Foreground="#666"
                                      TextAlignment="Center"
                                      Margin="0,0,0,5"/>
                            <TextBlock x:Name="BigScaleWeight"
                                      Text="0.000"
                                      FontSize="36"
                                      FontWeight="Bold"
                                      Foreground="#2196F3"
                                      TextAlignment="Center"/>
                            <TextBlock Text="KG"
                                      FontSize="14"
                                      Foreground="#666"
                                      TextAlignment="Center"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Test Button -->
                    <Button x:Name="TestBigScaleButton"
                           Content="ðŸ” Test Scale"
                           Height="40"
                           Background="#2196F3"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="SemiBold"
                           BorderThickness="0"
                           Click="TestBigScaleButton_Click"/>

                    <!-- Instructions -->
                    <TextBlock Text="Place a known weight on the scale and click 'Test Scale' to verify the reading."
                              FontSize="11"
                              Foreground="#666"
                              TextWrapping="Wrap"
                              Margin="0,10,0,0"
                              TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
